extends layoutblock content    #{title}        .container            form(method='post', action='contact/send')                .form-group                    label Name                    input.form-control(type='text', name='name', placeholder='Enter Name')                .form-group                    label Email                    input.form-control(type='email', name='email', placeholder='Enter Name')                .form-group                    label(for='exampleInputPassword1') Password                    input#exampleInputPassword1.form-control(type='password', placeholder='Password')                .form-group                    label Message                    textarea.form-control(name="message" , placeholder="Enter Your Message")                button.btn.btn-primary(type="submit") Submit